<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{basics.name}} - Resume</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 20px; line-height: 1.6; color: #333; }
        .container { max-width: 800px; margin: auto; }
        .header { text-align: center; margin-bottom: 20px; }
        .header h1 { margin: 0; font-size: 24px; }
        .contact-info { text-align: center; font-size: 14px; margin-bottom: 20px; }
        .section { margin-bottom: 20px; }
        .section h2 { font-size: 18px; border-bottom: 1px solid #000; padding-bottom: 5px; margin-bottom: 10px; }
        .item { margin-bottom: 15px; }
        .item-title { font-weight: bold; margin-bottom: 5px; }
        .item-details { margin-left: 20px; font-size: 14px; }
        .item-details p { margin: 0; }
        ul { margin: 5px 0; padding-left: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>{{basics.name}}</h1>
            <p>{{basics.label}}</p>
        </div>
        <div class="contact-info">
            <p>{{basics.location.city}}, {{basics.location.countryCode}} | {{basics.phone}} | {{basics.email}} | {{basics.website}}</p>
        </div>
        
        {{#if education}}
        <div class="section">
            <h2>Education</h2>
            {{#each education}}
                <div class="item">
                    <div class="item-title">{{institution}}</div>
                    <div class="item-details">
                        <p>{{studyType}} in {{area}}</p>
                        <p>{{startDate}} - {{endDate}}</p>
                        {{#if score}}<p>GPA: {{score}}</p>{{/if}}
                        {{#if courses}}
                        <p>Relevant Courses:</p>
                        <ul>
                            {{#each courses}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if work}}
        <div class="section">
            <h2>Experience</h2>
            {{#each work}}
                <div class="item">
                    <div class="item-title">{{position}}, {{name}}</div>
                    <div class="item-details">
                        <p>{{startDate}} - {{endDate}}</p>
                        <p>{{summary}}</p>
                        <ul>
                            {{#each highlights}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if projects}}
        <div class="section">
            <h2>Projects</h2>
            {{#each projects}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <p>{{description}}</p>
                        <ul>
                            {{#each highlights}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if certificates}}
        <div class="section">
            <h2>Certifications</h2>
            {{#each certificates}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <p>{{issuer}}, {{date}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if publications}}
        <div class="section">
            <h2>Publications</h2>
            {{#each publications}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <p>{{publisher}}, {{releaseDate}}</p>
                        <p>{{summary}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if skills}}
        <div class="section">
            <h2>Skills</h2>
            {{#each skills}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <ul>
                            {{#each keywords}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if languages}}
        <div class="section">
            <h2>Languages</h2>
            {{#each languages}}
                <div class="item">
                    <div class="item-title">{{language}}</div>
                    <div class="item-details">
                        <p>{{fluency}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if interests}}
        <div class="section">
            <h2>Interests</h2>
            {{#each interests}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <ul>
                            {{#each keywords}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
        
        {{#if references}}
        <div class="section">
            <h2>References</h2>
            {{#each references}}
                <div class="item">
                    <div class="item-title">{{name}}</div>
                    <div class="item-details">
                        <p>{{reference}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</body>
</html>
